/* pages/basic_nursing/basic_nursing.wxss */

.root {
  width: 100%;
  height: 100%;
  background-color: #dcdcdc;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 5rpx;
}

.widgets-item {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  background-color: #ffffff;
  overflow: hidden;
  border-radius: 4rpx;
  cursor: pointer;
}

.widgets-info {
  display: flex;
  padding: 15rpx;
  align-items: center;
  flex-direction: row;
  font-size: 35rpx;
}

.widgets-info-name {
  flex: 1;
  color: #0066ff;
}

.widgets-info-img {
  width: 25rpx;
  height: 25rpx;
  transition: transform 0.4s;
}
